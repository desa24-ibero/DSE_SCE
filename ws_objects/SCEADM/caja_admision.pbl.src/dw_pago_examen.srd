table(column=(type=long updatewhereclause=yes key=yes name=folio dbname="aspiran.folio" )
 column=(type=long updatewhereclause=yes key=yes name=clv_ver dbname="aspiran.clv_ver" )
 column=(type=long updatewhereclause=yes key=yes name=clv_per dbname="aspiran.clv_per" )
 column=(type=long updatewhereclause=yes key=yes name=anio dbname="aspiran.anio" )
 column=(type=long update=yes updatewhereclause=yes name=pago_exam dbname="aspiran.pago_exam" values="No ha Pagado	0/Ya Pagó	1/" )
 retrieve="  SELECT aspiran.folio,   
         aspiran.clv_ver,   
         aspiran.clv_per,   
         aspiran.anio,   
         aspiran.pago_exam  
    FROM aspiran  
   WHERE ( aspiran.folio = :fol ) AND  
         ( aspiran.status = 0 or aspiran.status = 3 ) AND  
         aspiran.clv_ver = :ver AND  
         aspiran.clv_per = :per AND  
         aspiran.anio = :anio    
" update="aspiran" updatewhere=1 updatekeyinplace=yes arguments=(("fol", number),("ver", number),("per", number),("anio", number)) )
